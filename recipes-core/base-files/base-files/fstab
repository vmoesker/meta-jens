# stock fstab - you probably want to override this with a machine specific one

/dev/root            /                    auto       defaults              1  1
proc                 /proc                proc       defaults              0  0
devpts               /dev/pts             devpts     mode=0620,gid=5       0  0
usbdevfs             /proc/bus/usb        usbdevfs   noauto                0  0
tmpfs                /run                 tmpfs      mode=0755,nodev,nosuid,strictatime 0  0
tmpfs                /var/volatile        tmpfs      defaults              0  0

# uncomment this if your device has a SD/MMC/Transflash slot
#/dev/mmcblk0p1       /media/card          auto       defaults,sync,noauto  0  0
/dev/disk/by-label/boot-curie	/boot		ext2	noauto			1 2
/dev/disk/by-label/data-curie	/data		ext4	defaults		1 2
none	/etc	unionfs	noauto,dirs=/data/.shadow/.etc=rw:/etc=ro	0 0
none	/home	unionfs	noauto,dirs=/data/.shadow/.home=rw:/home=ro	0 0
none	/var/lib	unionfs	noauto,dirs=/data/.shadow/.var_lib=rw:/var/lib=ro	0 0
